{
    "name": "cn-tools/negotiation-middleware",
    "type": "library",
    "description": "Content negotiation middleware for Slim v4 / PSR-15.",
    "keywords": ["negotiation", "middleware", "slim"],
    "homepage": "https://github.com/cn-tools/negotiation-middleware",
    "license": "MIT",
    "authors": [
        {
            "name": "Clemens Neubauer",
            "email": "cn-tools@gmx.at",
            "homepage": "https://github.com/cn-tools"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-middleware": "^1.0",
        "willdurand/negotiation": "^3.0",
        "psr/http-server-handler": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "CNTools\\NegotiationMiddleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CNTools\\NegotiationMiddleware\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "nyholm/psr7": "^1.8"
    },
    "scripts": {
        "test": "phpunit"
    }
}
